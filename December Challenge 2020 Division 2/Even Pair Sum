#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define Fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);

int main()
{

    Fast
    int t;
    cin>>t;
    while(t--)
    {
        ll x,y;
        cin>>x>>y;
        ll odd1=0,even1=0;
        ll odd2=0,even2=0;

        if(x%2==0){
            odd1=x/2;
            even1=x/2;
        }else{
            odd1=(x/2)+1;
            even1=(x/2);
        }

        if(y%2==0){
            odd2=y/2;
            even2=y/2;
        }else{
            odd2=(y/2)+1;
            even2=(y/2);
        }

        cout<< (odd1*odd2)+even1*even2<<endl;

    }
}


