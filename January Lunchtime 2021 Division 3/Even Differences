#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define Fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
#define Sort(v) sort(v.begin(),v.end())
int main(){
    Fast
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<int>v(n);
        int e=0,o=0;
        for(int i=0; i<n; i++){
            cin>>v[i];
            if(v[i]%2)o++;
            else e++;
        }
        cout<< min(e,o)<<endl;

    }
}
